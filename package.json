{
  "private": true,
  "version": "1.0.0",
  "name": "improved-moodle",
  "repository": "https://github.com/guesant/improved-moodle.git",
  "author": "Gabriel R. Antunes <gabrielrodantunes@gmail.com>",
  "description": "Extensão para navegador criada para melhorar a experiência do usuário na plataforma Moodle",
  "license": "MIT",
  "scripts": {
    "ext:run": "web-ext run",
    "ext:build": "web-ext build",
    "build": "NODE_ENV=production rollup --config rollup.config.js",
    "dev": "rollup --config rollup.config.js --watch",
    "format": "prettier --write src",
    "lint": "eslint --fix src/scripts/**/*.{js,ts,tsx,ts}",
    "prepare": "husky install"
  },
  "webExt": {
    "sourceDir": "dist/ext",
    "artifactsDir": "dist"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@types/webextension-polyfill": "^0.8.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tslib": "^2.3.1",
    "typescript": "^4.4.2",
    "web-ext": "^6.3.0",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@guanghechen/rollup-plugin-copy": "^1.8.3",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.25.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "rollup": "^2.56.3",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-iife": "^0.5.0",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-terser": "^7.0.2"
  }
}
