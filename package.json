{
  "private": true,
  "version": "1.0.0",
  "name": "improved-moodle",
  "repository": "https://github.com/guesant/improved-moodle.git",
  "author": "Gabriel R. Antunes <gabrielrodantunes@gmail.com>",
  "description": "Extensão para navegador criada para melhorar a experiência do usuário na plataforma Moodle",
  "license": "MIT",
  "scripts": {
    "clear": "rm -rf dist",
    "ext:run": "web-ext run",
    "ext:build": "web-ext build",
    "build": "clear; NODE_ENV=production gulp assets; ./scripts/build.js",
    "dev": "concurrently -n assets,esbuild \"gulp watchAssets\" \"./scripts/build.js --watch --sourcemap\"",
    "format": "prettier --write src",
    "lint": "eslint --fix src/scripts/**/*.{js,ts,tsx,ts}",
    "prepare": "husky install"
  },
  "webExt": {
    "sourceDir": "dist/ext",
    "artifactsDir": "dist"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/webextension-polyfill": "^0.8.0",
    "concurrently": "^6.2.1",
    "esbuild": "^0.12.25",
    "esbuild-plugin-postcss2": "^0.1.0",
    "gulp": "^4.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "tslib": "^2.3.1",
    "typescript": "^4.4.2",
    "web-ext": "^6.3.0",
    "webextension-polyfill": "^0.8.0",
    "yargs": "^17.1.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.25.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2"
  }
}
